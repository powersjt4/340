<div id="about_box"> 
	<h2>Add to Items</h2>
	<p>
		You can add items to the database here:<br>
	</p>
	<form method = "POST">
    	<legend>Add Item:</legend>
    		<label>Name: </label>
		 	<input type="text" name = "itemName" id = "name_frm" value=""><br>

    		<label>Price:</label>
		 	<input type="number" step = "0.01" min = 0 name = "price" id = "price_frm" value = ""><br>

		 	<label>Description:</label>
		 	<input type="text" name = "desc" id = "desc_frm" value = ""><br>
		 	
		 	<label>Meal Type:</label>
	 	    <select name='meal_type' id="item_meal_frm">
	 	    	{{#each mealResults}}
	 	      		<option value='{{id}}'>{{name}}</option>
	 	    	{{/each}}
	 		</select>
		 	<label>Primary Ingredient:</label>
	        <select name='pi' id="pi_frm">
	        	{{#each piResults}}
	          		<option value='{{id}}'>{{name}}</option>
	        	{{/each}}
	    	</select><br>
		<input type="submit" id ="submitItem" Value= "Submit Item" />

	</form>

<h1>Item Results:</h1>
<div id = "newItems">
<table id="table">
  <thead>
  	<tr>
    	<th>Name</th>
    	<th>Price</th> 
    	<th>Description</th>
    	<th>Meal Type</th>
    	<th>Primary Ingredient</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
</div>
</main>
</div>
</div>
<script src="/js/addItemScript.js"></script>
